---
import { calculateTimeUntilText } from '../utils/timeUntil';

interface Props {
  datePublished: Date;
  dateExpired: Date;
}

const { datePublished, dateExpired } = Astro.props;
const timeUntilText = calculateTimeUntilText(dateExpired);
---

<strong style={timeUntilText.includes('ago') ? 'color: red;' : ''}>
  {timeUntilText.includes('ago') ? 'Expired: ' : 'Time left: '}
  <time
    datetime={datePublished.toISOString()}
    class={timeUntilText.includes('ago') ? 'text-red-500' : ''}
  >
    {timeUntilText}
  </time>
</strong>
