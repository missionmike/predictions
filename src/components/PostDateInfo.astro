---
import FormattedDate from './FormattedDate.astro';
import TimeUntilExpiry from './TimeUntilExpiry.astro';

interface Props {
  pubDate: Date;
  expiryDate?: Date;
  updatedDate?: Date;
  showTimeUntil?: boolean;
}

const { pubDate, expiryDate, updatedDate, showTimeUntil = false } = Astro.props;
---

<div class="date">
  {
    showTimeUntil ? (
      <>
        Predicted on <FormattedDate date={pubDate} />
        {expiryDate && (
          <span class="time-left">
            Time left:{' '}
            <strong>
              <TimeUntilExpiry pubDate={pubDate} expiryDate={expiryDate} />
            </strong>
          </span>
        )}
      </>
    ) : (
      <>
        <FormattedDate date={pubDate} />
        {updatedDate && (
          <div class="last-updated-on">
            Last updated on <FormattedDate date={updatedDate} />
          </div>
        )}
      </>
    )
  }
</div>

<style lang="scss">
  .date {
    margin: 1rem 0;
    color: rgb(var(--gray));
  }

  .time-left {
    color: rgb(var(--gray));

    &::before {
      content: '';
      border-left: 1px solid rgb(var(--gray));
      margin-right: 0.5rem;
    }

    @media (max-width: 768px) {
      display: block;

      &::before {
        display: none;
      }
    }
  }

  .last-updated-on {
    font-style: italic;
  }
</style>
