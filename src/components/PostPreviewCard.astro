---
import PostDateInfo from './PostDateInfo.astro';

interface Props {
  post: {
    id: string;
    data: {
      title: string;
      heroImage?: string;
      pubDate: Date;
      expiryDate: Date;
    };
  };
  isFeatured?: boolean;
}

const { post, isFeatured = false } = Astro.props;
---

<li class:list={['blog-preview-card', { featured: isFeatured }]}>
  <a href={`/predictions/${post.id}/`}>
    {post.data.heroImage && <img width={720} height={360} src={post.data.heroImage} alt="" />}
    <h4 class="title">{post.data.title}</h4>
    <PostDateInfo
      pubDate={post.data.pubDate}
      expiryDate={post.data.expiryDate}
      showTimeUntil={true}
    />
  </a>
</li>

<style lang="scss">
  .blog-preview-card {
    width: calc(50% - 1rem);

    &.featured {
      width: 100%;
      margin-bottom: 1rem;
      text-align: center;

      img {
        width: 100%;
      }

      .title {
        font-size: 2.369rem;
      }
    }

    img {
      margin-bottom: 0.5rem;
      border-radius: 12px;
    }

    a {
      display: block;
      text-decoration: none;
      color: inherit;

      &:hover {
        h4,
        .date {
          color: rgb(var(--accent));
        }

        img {
          box-shadow: var(--box-shadow);
        }
      }
    }

    .title {
      margin: 0;
      color: rgb(var(--black));
      line-height: 1;
    }

    .date {
      margin: 1rem 0;
      color: rgb(var(--gray));
    }

    .time-until-it-should-happen {
      color: rgb(var(--gray));

      &::before {
        content: '';
        border-left: 1px solid rgb(var(--gray));
        margin-right: 0.5rem;
      }
    }
  }

  @media (max-width: 720px) {
    .blog-preview-card {
      width: 100%;
      text-align: center;

      &.featured {
        margin-bottom: 0;

        .title {
          font-size: 1.563em;
        }
      }
    }
  }
</style>
