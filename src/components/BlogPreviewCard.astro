---
import FormattedDate from './FormattedDate.astro';

interface Props {
  post: {
    id: string;
    data: {
      title: string;
      heroImage?: string;
      pubDate: Date;
    };
  };
  isFeatured?: boolean;
}

const { post, isFeatured = false } = Astro.props;
---

<li class:list={['blog-preview-card', { featured: isFeatured }]}>
  <a href={`/blog/${post.id}/`}>
    {post.data.heroImage && <img width={720} height={360} src={post.data.heroImage} alt="" />}
    <h4 class="title">{post.data.title}</h4>
    <p class="date">
      <FormattedDate date={post.data.pubDate} />
    </p>
  </a>
</li>

<style>
  .blog-preview-card {
    width: calc(50% - 1rem);
  }
  .blog-preview-card.featured {
    width: 100%;
    margin-bottom: 1rem;
    text-align: center;
  }
  .blog-preview-card.featured img {
    width: 100%;
  }
  .blog-preview-card.featured .title {
    font-size: 2.369rem;
  }
  .blog-preview-card img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }
  .blog-preview-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  .blog-preview-card .title {
    margin: 0;
    color: rgb(var(--black));
    line-height: 1;
  }
  .blog-preview-card .date {
    margin: 0;
    color: rgb(var(--gray));
  }
  .blog-preview-card a:hover h4,
  .blog-preview-card a:hover .date {
    color: rgb(var(--accent));
  }
  .blog-preview-card a:hover img {
    box-shadow: var(--box-shadow);
  }
  @media (max-width: 720px) {
    .blog-preview-card {
      width: 100%;
      text-align: center;
    }
    .blog-preview-card.featured {
      margin-bottom: 0;
    }
    .blog-preview-card.featured .title {
      font-size: 1.563em;
    }
  }
</style>
